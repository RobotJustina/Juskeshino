<launch>
  <arg name="posx" default="3.75" />
  <arg name="posy" default="12.0" />
  <arg name="yaw" default="-1.57"/>
  <arg name="world" default="appartment"/>
    
  <include file="$(find surge_et_ambula)/launch/justina/gazebo_simul/justina_hardware_gazebo.launch">
    <arg name="posx" value="$(arg posx)" />
    <arg name="posy" value="$(arg posy)" />
    <arg name="yaw" default="$(arg yaw)"/>
    <arg name="world" value="$(arg world)"/>
  </include>
  
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find config_files)/rviz/justina_gazebo_mapless.rviz"/>

  <node name="justina_gui" pkg="justina_gui" type="justina_gui_node" output="screen">
    <param name="la_predefined" value="$(find config_files)/justina/manipulation/la_predefined.yaml"/>
    <param name="ra_predefined" value="$(find config_files)/justina/manipulation/ra_predefined.yaml"/>
    <param name="hd_predefined" value="$(find config_files)/justina/manipulation/hd_predefined.yaml"/>
    <remap from="/vision/obj_reco/recognize_object" to="/vision/obj_segmentation/get_obj_pose"/>
  </node>

  <node name="map_server" pkg="map_server" type="map_server" output="screen"
        args="$(find config_files)/maps/AllBlank.yaml _frame_id:=odom">
  </node>

  <include file="$(find surge_et_ambula)/launch/justina/gazebo_simul/justina_gazebo_controllers.launch"/>
  <!-- <include file="$(find surge_et_ambula)/launch/justina/vision.launch"/> -->

  <node name="get_goal_point" pkg="mapless_nav" type="get_goal_point.py"/>

  <node name="local_occ_grid" pkg="local_occ_grid" type="local_occ_grid">
    <param name="use_lidar" value="true"/>
    <param name="use_cloud" value="true"/>
    <param name="laser_scan_topic" value="/hardware/scan"/>
    <param name="point_cloud_topic" value="/camera/depth_registered/points"/>
  </node>

  <node name="joy" pkg="joy" type="joy_node" output="screen">
    <remap from="/joy"      to="/hardware/joy"/>
  </node>
 
  <node name="joystick_teleop_improved" pkg="joystick_teleop" type="joystick_teleop_node_improved.py" output="screen" >
    <remap from="/hardware/mobile_base/cmd_vel"      to="/cmd_vel"/>
  </node>

</launch>
